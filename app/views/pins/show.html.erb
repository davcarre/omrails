<div class="container">
	<p id="notice"><%= notice %></p>

	<p>
	  <strong>User:</strong>
	  <%= @pin.user.email %>
	</p>

	<p>
	  <strong>Title:</strong>
	  <%= @pin.title %>
	</p>

	<p>
	  <strong>Image Link:</strong>
	  <%= @pin.image %>
	</p>

	<p>
	  <strong>Comment:</strong>
	  <%= @pin.comment %>
	</p>
	<% if @pin.user == current_user %>
		<%= link_to 'Edit', edit_pin_path(@pin) %> |
	<% end %>
	<%= link_to 'Back', pins_path %>
</div>